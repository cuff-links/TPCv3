}
<div id="content">
 
    
 
    @if (Model.Posts.Any())
    {
        foreach (Post post in Model.Posts)
        {
            @Html.Partial("_PostTemplate", post)
        }
    }
    else
    {
        <p>No posts found!</p>
    }
 
