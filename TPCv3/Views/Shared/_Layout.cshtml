<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href='http://fonts.googleapis.com/css?family=Josefin+Slab|Goudy+Bookletter+1911' rel='stylesheet' type='text/css'>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Scripts/jquery-ui-1.9.2.min.js")" type="text/javascript"> </script>
        <!-- plugin (this is optional) -->
        <script type="text/javascript" src="@Url.Content("~/Scripts/fancybox/lib/jquery.mousewheel-3.0.6.pack.js")"> </script>
        <!-- Add fancyBox -->
        <link rel="stylesheet" href="@Url.Content("~/Scripts/fancybox/source/jquery.fancybox.css?v=2.1.3")" type="text/css"
              media="screen" />
        <script type="text/javascript" src="@Url.Content("~/Scripts/fancybox/source/jquery.fancybox.pack.js?v=2.1.3")"> </script>
        <!-- Optionally add helpers - button, thumbnail and/or media -->
        <link rel="stylesheet" href="@Url.Content("~/Scripts/fancybox/source/helpers/jquery.fancybox-buttons.css?v=1.0.5")"
              type="text/css" media="screen" />
        <script type="text/javascript" src="@Url.Content("~/Scripts/fancybox/source/helpers/jquery.fancybox-buttons.js?v=1.0.5")"> </script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/fancybox/source/helpers/jquery.fancybox-media.js?v=1.0.5")"> </script>
        <link rel="stylesheet" href="@Url.Content("~/Scripts/fancybox/source/helpers/jquery.fancybox-thumbs.css?v=1.0.7")"
              type="text/css" media="screen" />
        <script type="text/javascript" src="@Url.Content("~/Scripts/fancybox/source/helpers/jquery.fancybox-thumbs.js?v=1.0.7")"> </script>
        <script src="@Url.Content("~/Scripts/common.js")" type="text/javascript"> </script>
        <script type="text/javascript">
            $('.fancybox').fancybox({
                helpers: {
                    title: {
                        type: 'outside'
                    },
                    thumbs: {
                        width: 75,
                        height: 75
                    }
                },
                beforeLoad: function() {
                    this.title = $(this.element).attr('data-caption');
                }
            });
        </script>
    </head>
    <body id="home">
        <div id="header">
            <div id="headerWrapper">
                <div id="headerLeft">
                    <a href="@Url.RouteUrl("Default", new {action = "Index", controller = "Home"}, Request.Url.Scheme)">
                        <img src="@Url.Content("~/Content/images/banner.png")" alt="Banner" /></a>
                </div>
                <div id="headerRight">
                    <ul id="menu">
                        <li>
                            @Html.ActionLink("Home", "Index", "Home")
                        </li>
                        <li>@Html.ActionLink("Portfolio", "Portfolio", "Home")
                            <ul>
                                <li>@Html.ActionLink("Web Projects", "Portfolio", "Home", null, null, "webApps", null, null)</li>
                                <li>@Html.ActionLink("Desktop Projects", "Portfolio", "Home", null, null, "deskApps", null, null)</li>
                                <li>@Html.ActionLink("Other Projects", "Portfolio", "Home", null, null, "otherApps", null, null)</li>
                            </ul>
                        <li>@Html.ActionLink("The Power Blog", "List", "Blog" , new {Page = 1}, null)
                        <li><a href="#">About</a></li>
                        <li><a href="#">Contact</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div id="body">
            <div id="wrapper">
                <div id="sidebars">
                    @Html.Partial("_Search")
                    @Html.Action("SideBars", "Blog")
                </div>
                <div id="wrapperContent">
                    @RenderBody()
                </div>
            </div>
            
        </div>
        <div id="footer">
            <div id="footerWrapper">
                <dl>
                    <dt>@Html.ActionLink("Home", "Index", "Home")</dt>
                </dl>
                <dl>
                    <dt>@Html.ActionLink("Projects", "Portfolio", "Home")</dt>
                    <dd>@Html.ActionLink("Web Projects", "Portfolio", "Home", null, null, "webApps", null, null)</dd>
                    <dd>@Html.ActionLink("Desktop Projects", "Portfolio", "Home", null, null, "deskApps", null, null)</dd>
                    <dd>@Html.ActionLink("Other Projects", "Portfolio", "Home", null, null, "otherApps", null, null)</dd>
                </dl>
                <dl>
                    <dt>About</dt>
                </dl>
                <dl>
                    <dt>Contact</dt>
                </dl>
            </div>
            <br />
            <p>Copyright © 2011 - @DateTime.Now.Year The Power Coder. All Rights Reserved.</p>
        </div>
    </body>
</html>