@using TPCv3.Helpers
@model IList<TPCv3.Domain.Entities.Category>
           
<div class="sidebar categoriesDiv">
  <h3>General Topics</h3>
 
  @if (Model.Count > 0)
  {
    <ul class="categoryList">
      @foreach (var category in Model)
      {
        <li>@Html.CategoryLink(category)</li>
      }
    </ul>
  }
  else
  {
    <p>No categories found!</p>
  }
</div>

