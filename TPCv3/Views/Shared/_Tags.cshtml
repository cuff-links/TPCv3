@using TPCv3.Helpers
@model IList<TPCv3.Domain.Entities.Tag>
           
<div class="tags sidebar">
  <h3>Tags</h3>
 <ul>
  @if (Model.Count > 0)
  {
    foreach (var tag in Model)
    {
      <li class="tagList">@Html.TagLink(tag)</li>
    }
  }
  else
  {
      <li>No tags found!</li>
   }
    </ul>
</div>