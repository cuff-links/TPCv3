<div id="searchDiv">
    @using (Html.BeginForm(

    "Search",   //Action
    "Blog",     //Controller//Method
    FormMethod.Post, new Dictionary<string, object>
                                                         {
                                                             {"id" , "search-form"}
                                                         }) ) 
    {
        <p>
            Search Blog: 
        </p>
        <p>
            @Html.TextBox("txtSearch")
        </p>
        <p>
            <input type="submit" value="Search"/>
            @Html.Hidden("searchPage", 1)
        </p>
    }
</div>