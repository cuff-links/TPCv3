@model TPCv3.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>The Power Coder | Login</title>
     
        <link href="@Url.Content("~/Content/themes/simple/admin.css")" rel="stylesheet" />
     
        <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
        <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.10.0/jquery.validate.min.js"></script>
        <script src="http://ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.validate.unobtrusive.min.js"></script>
        <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css"/>
        <link href="@Url.Content("~/Content/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css"/>
    </head>
    <body>
        <div class="span6 offset3" id="login-div">
            @Html.ValidationSummary(true)
 
            @using (Html.BeginForm())
            {
                <fieldset>
                    <legend>Login</legend>
                    <table>
                        <tr>
                            <td>@Html.LabelFor(m => m.Username)</td>
                            <td>@Html.TextBoxFor(m => m.Username)</td>
                            <td>@Html.ValidationMessageFor(m => m.Username)</td>
                        </tr>
                    </table>
                    <table>
                        <tr>
                            <td>@Html.LabelFor(m => m.Password)</td>
                            <td>@Html.PasswordFor(m => m.Password)</td>
                            <td>@Html.ValidationMessageFor(m => m.Password)</td>
                        </tr>
                    </table>
                    @Html.Hidden("ReturnUrl")
                    @Html.AntiForgeryToken()
                    <p>
                        <input class="btn" type="submit" value="Login" />
                    </p>
                </fieldset>
            }
        </div>
    </body>
</html>
