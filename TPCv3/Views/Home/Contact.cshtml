@{
    ViewBag.Title = "The Power Coder | Contact Me";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TPCv3.Domain.Entities.Contact
 
<h2>Drop Me A Line</h2>
 
<div id="content">
    
    <div class="container-fluid">
        <div class="hero-unit">
            <div class="row-fluid">
                <h1>First and foremost, thank you...</h1>
                <p>
                    I appreciate you taking the time to visit my website. I'd love to get your feedback. Are there any topics that you 
                    want me to cover? Do you have any questions for me? Do you want to say hi? Feel free to send me a message through 
                    the form below or use one of the listed avenues to reach out to me. 
                </p>
            </div>
            <div class="row-fluid">
                <ul id="contactGallery" class="thumbnails">
                    <li class="span2">
                        <abbr title="Click for email address">
                            <a onclick="changeContactText('email')" class="thumbnail">
                                <img src="@Url.Content("~/Content/images/Email-icon-square.png")" alt="Email: contact@thepowercoder.com"/>
                            </a>
                        </abbr>
                    </li>
                    <li class="span2">
                        <abbr title="Click for Skype username">
                            <a onclick="changeContactText('skype')" class="thumbnail">
                                <img src="@Url.Content("~/Content/images/Apps-Skype-icon.png")" alt="Skype: John.Dorlus"/>
                            </a>
                        </abbr>
                        
                    </li>
                    <li class="span2">
                        <abbr title="Click for AOL Instant Messenger username">
                            <a onclick="changeContactText('aim')" class="thumbnail">
                                <img src="@Url.Content("~/Content/images/aol-instant-messenger1.png")" alt="AOL Instant Messenger: thepowercoder"/>
                            </a>
                        </abbr>
                    </li>
                    <li class="span2">
                        <abbr title="Click for Google+ username">
                            <a onclick="changeContactText('google')" class="thumbnail">
                                <img src="@Url.Content("~/Content/images/google-plus-logo.png")" alt="Google+: silne.dorlus@gmail.com"/>
                            </a>
                        </abbr>
                    </li>
                    <li class="span2">
                        <abbr title="Click for LinkedIn profile">
                            <a onclick="changeContactText('linkedin')" class="thumbnail">
                                <img src="@Url.Content("~/Content/images/linkedin-logo.png")" alt="LinkedIn: www.linkedin.com/in/johndorlus"/>
                            </a>
                        </abbr>
                        
                    </li>
                    <li class="span2">
                        <abbr title="Click for Github repository">
                            <a onclick="changeContactText('github')" class="thumbnail">
                                <img src="@Url.Content("~/Content/images/github-logo.png")" alt="Github: www.github.com/silne30"/>
                            </a>
                        </abbr>
                    </li>
                </ul>
            </div>
            <div id="contactInfo" class="row-fluid">
                <p id="contactLinkText"></p>
            </div>
            @using (Ajax.BeginForm(null, null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "form0", OnFailure = "ajaxFailure" }, new { @class = "form-horizontal" }))
            {
                <div class="control-group">
                    @Html.LabelFor(m => m.Name, new Dictionary<string, object> { { "class", "control-label" } })
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Name, new Dictionary<string, object> { { "placeholder", "Name" }, { "class", "span7" } })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                </div>  
                <div class="control-group">
                    @Html.LabelFor(m => m.Email, new Dictionary<string, object> { { "class", "control-label" } })
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Email, new Dictionary<string, object> { { "placeholder", "i.e. John@Dorlus.com" }, { "class", "span7" } })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div> 
                <div class="control-group">
                    @Html.LabelFor(m => m.Website, new Dictionary<string, object> { { "class", "control-label" } })
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Website, new Dictionary<string, object> { { "placeholder", "i.e. www.thepowercoder.com" }, { "class", "span7" } })
                        @Html.ValidationMessageFor(m => m.Website)
                    </div>
                </div> 
                <div class="control-group">
                    @Html.LabelFor(m => m.Subject, new Dictionary<string, object> { { "class", "control-label" } })
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Subject, new Dictionary<string, object> { { "placeholder", "Subject" }, { "class", "span7" } })
                        @Html.ValidationMessageFor(m => m.Subject)
                    </div>
                </div> 
                <div class="control-group">
                    @Html.LabelFor(m => m.Body, new Dictionary<string, object> { { "class", "control-label" } })
                    <div class="controls">
                        @Html.TextAreaFor(m => m.Body, new Dictionary<string, object> { { "placeholder", "Body of message" }, { "class", "span7" }, { "style", "resize:none" } })
                        @Html.ValidationMessageFor(m => m.Body)
                    </div>
                </div> 
                <div class="control-group pull-left span12">
                    <a href="#contactGallery" id="sendEmailButton"  style="text-decoration: none" onmouseout="submitButtonHoverStop()" onmouseover="submitButtonHover()" onclick="$('#form0').submit()" class="btn-primary btn-large span6 offset2 pull-left text-center">
                        <i style="margin: 0 10px" class="icon-envelope icon-white"></i>Send Email
                    </a>
                </div>
            }
        </div>
    </div>
</div>